<html xmlns="http://www.w3.org/1999/xhtml" ng-app="ConferenceApp">
<head>
    <title>Conference App</title>

    <!-- CSS -->
    <link href="~/lib/angular-material/angular-material.css" rel="stylesheet" />
    <link href="~/lib/mdpickers/dist/mdpickers.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,700' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
    <base href="/" />


    <!-- Library Files -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/lib/angular-aria/angular-aria.js"></script>
    <script src="~/lib/angular-messages/angular-messages.js"></script>
    <script src="~/lib/angular-material/angular-material.js"></script>
    <script src="~/lib/angular-material/angular-material-mocks.js"></script>
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/mdpickers/dist/mdpickers.js"></script>

    <!-- App-->
    <script src="~/ngapp/app.js"></script>

    <!-- Controllers-->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/controllers/conferenceaddcontroller.js"></script>
    <script src="~/ngapp/controllers/conferenceeditcontroller.js"></script>
    <script src="~/ngapp/controllers/conferencemanagecontroller.js"></script>
    <script src="~/ngapp/controllers/roomaddcontroller.js"></script>
    <script src="~/ngapp/controllers/roomdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/roomeditcontroller.js"></script>
    <script src="~/ngapp/controllers/schedulecontroller.js"></script>
    <script src="~/ngapp/controllers/presentationaddcontroller.js"></script>
    <script src="~/ngapp/controllers/slotaddcontroller.js"></script>
    <script src="~/ngapp/controllers/sloteditcontroller.js"></script>
    <script src="~/ngapp/controllers/presentationdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/presentationeditcontroller.js"></script>
    <script src="~/ngapp/controllers/speakeraddcontroller.js"></script>
    <script src="~/ngapp/controllers/speakerdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/speakereditcontroller.js"></script>
    <script src="~/ngapp/controllers/toolbar.js"></script>
    <script src="~/ngapp/controllers/homecontroller.js"></script>

    <!-- Services-->
    <script src="~/ngapp/services/accountservice.js"></script>
    <script src="~/ngapp/services/dayservice.js"></script>
    <script src="~/ngapp/services/toolbarservice.js"></script>

</head>

<body ng-controller="AccountController as account" ng-cloak layout="column">

    <md-toolbar ng-controller="ToolbarController as toolbar" ng-hide="toolbar.toolbarService.hideToolbar">
        <div class="md-toolbar-tools" layout="row">
            @*<md-button ui-sref="conferenceManage">
                    Home
                </md-button>*@


            <div ui-sref="home"><img class="toolbar-logo" src="~/ngApp/images/logoSymp.png" /></div>
            <div layout="column" layout-align="end center">
                <md-button ng-hide="toolbar.toolbarService.hideBackButton" ng-click="toolbar.toolbarService.goBack()" href="#" class="md-fab md-mini md-accent" layout="flex">
                    <md-tooltip md-direction="right">Go Back</md-tooltip>
                    <md-icon>arrow_back</md-icon>
                </md-button>
            </div>
            <span flex></span>
            <h5 ng-show="account.isLoggedIn()">
                <span class="un-text">{{account.getUserName()}}</span>
            </h5>

            <md-button class="md-raised md-accent" href="/login" ng-show="!account.isLoggedIn()">Login</md-button>

            <div>
                <md-button href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()" class="md-fab md-mini md-warn logout-container" layout="flex">
                    <md-tooltip md-direction="right">Logout</md-tooltip>
                    <md-icon>account_box</md-icon>
                </md-button>
            </div>
        </div>
    </md-toolbar>



    <ui-view flex-grow="1" layout="column"></ui-view>



</body>
</html>
