<html xmlns="http://www.w3.org/1999/xhtml" ng-app="ConferenceApp">
<head>
    <title>Conference App</title>

    <!-- CSS -->
    <link href="~/lib/angular-material/angular-material.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,700' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <base href="/" />

    <!-- Library Files -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/lib/angular-aria/angular-aria.js"></script>
    <script src="~/lib/angular-messages/angular-messages.js"></script>
    <script src="~/lib/angular-material/angular-material.js"></script>
    <script src="~/lib/angular-material/angular-material-mocks.js"></script>
    <script src="~/lib/moment/moment.js"></script>

    <!-- App-->
    <script src="~/ngapp/app.js"></script>

    <!-- Controllers-->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/controllers/conferenceaddcontroller.js"></script>
    <script src="~/ngapp/controllers/conferenceeditcontroller.js"></script>
    <script src="~/ngapp/controllers/conferencemanagecontroller.js"></script>
    <script src="~/ngapp/controllers/roomaddcontroller.js"></script>
    <script src="~/ngapp/controllers/roomdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/roomeditcontroller.js"></script>
    <script src="~/ngapp/controllers/schedulecontroller.js"></script>    
    <script src="~/ngapp/controllers/presentationaddcontroller.js"></script>
    <script src="~/ngapp/controllers/presentationdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/presentationeditcontroller.js"></script>
    <script src="~/ngapp/controllers/speakeraddcontroller.js"></script>
    <script src="~/ngapp/controllers/speakerdisplaycontroller.js"></script>
    <script src="~/ngapp/controllers/speakereditcontroller.js"></script>

    <!-- Services-->
    <script src="~/ngapp/services/accountservice.js"></script>

</head>

<body ng-controller="AccountController as account" ng-cloak>

    <md-toolbar>
        <div class="md-toolbar-tools">
            @*<md-button ui-sref="conferenceManage">
                    Home
                </md-button>*@
            <h2>
                <span>{{account.getToolbarTitle()}}</span>
            </h2>
            <span flex></span>
            <h5 ng-show="account.isLoggedIn()">
                <span>{{account.getUserName()}}</span>
            </h5>
            <md-button class="md-raised" href="/login" ng-show="!account.isLoggedIn()">Login</md-button>
            <md-button class="md-raised" href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</md-button>
        </div>
    </md-toolbar>

    <ui-view></ui-view>

</body>
</html>
